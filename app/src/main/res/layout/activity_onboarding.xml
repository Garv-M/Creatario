<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding">

    <Button
        android:id="@+id/sign_in_main"
        android:layout_width="306dp"
        android:layout_height="53dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/btn_bg"
        android:text="Sign In"
        android:textSize="16sp"
        app:backgroundTint="#877F76"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/register_main"
        android:layout_width="306dp"
        android:layout_height="53dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/btn_bg"
        android:text="Register"
        android:textSize="16sp"
        app:backgroundTint="#877F76"
        app:layout_constraintBottom_toTopOf="@+id/sign_in_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="331dp"
        android:layout_height="313dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/register_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril"
        android:text="Creatorio"
        android:textColor="#595555"
        android:textSize="56sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.798" />

</androidx.constraintlayout.widget.ConstraintLayout>